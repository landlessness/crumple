<p id="notice"><%= notice %></p>
<h1>
  <%= @project.name %>
  <% if @tags %>
  with tags: 
  <%= @tags.join(' ')  %>
  <%= link_to 'x', @project  %>
  <% end %>
</h1>
<p><%= @project.description %></p>
<p>
  <b>People:</b><br/>
  <%= link_to 'Add people to ' + @project.name, new_project_person_path(@project) %>
  <%= will_paginate @project_people %>
  <ul>
    <%= render @project_people %>    
  </ul>
  <%= will_paginate @project_people %>
  <%= link_to 'Add people to ' + @project.name, new_project_person_path(@project) %>
</p>
<p>
  <b>Thoughts:</b><br/>
  <%= link_to 'New thought about ' + @project.name, new_project_thought_path(@project) %>
  <% if @showing_archived_thoughts %>
  <%= link_to 'Active thoughts', project_path(@project) %>
  <% else %>
  <%= link_to 'Archived thoughts', project_path(@project, :archived_thoughts => 1) %>
  <% end %>
  <%= will_paginate @project_thoughts %>
  <table>
    <tr>
      <th>Thought</th>
      <th>Tags</th>
      <th>Creator</th>
      <th>Project</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <%= render @project_thoughts %>    
  </table>
  <%= will_paginate @project_thoughts %>
  <%= link_to 'New thought about ' + @project.name, new_project_thought_path(@project) %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
