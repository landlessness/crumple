<!DOCTYPE html>
<html>
<head>
  <title>Crumple: A notebook for creative thinkers</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "jquery-1.4.2.min.js", "jquery.rails.js" %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-5885415-2']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
</head>
<body>
  <% if person_signed_in? %>
  <%= link_to 'Home', root_path %>
  <%= link_to 'Thoughts', person_thoughts_path(current_person) %>
  <%= link_to_drop_box %>
  <%= link_to 'Projects', projects_path %>
  <%= link_to current_person.email, current_person %>
  <%= link_to "Sign Out", destroy_person_session_path %>
  <% else %>
  <%= link_to "Sign up", new_person_registration_path %> or <%= link_to "Sign in", new_person_session_path %>
  <% end %>

  <%= yield %>

</body>
</html>
