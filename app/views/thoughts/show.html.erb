<p id="notice"><%= notice %></p>

<% if @thought.archived? %>
<h3><%= @thought.state %> <%= link_to 'activate', activate_person_thought_path(current_person, @thought), :method => :put %></h3>
<% end %>

<p>
  <b>Thought:</b>
  <pre><%= auto_link @thought.body %></pre>
</p>

<p>
  <b>Tags:</b>
  <%= links_to_tags @thought.tags, @thought.project %>
</p>

<p>
  <%= form_for [current_person, @thought, @comment] do |f| %>
  <div class="field">
    <%= f.label :body, 'Add a comment:' %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
  <% end %>
  <b>Comments:</b>
  <ul>
    <%= render @thought.comments %>
  </ul>  
</p>
<p>
  <b>Creator:</b>
  <%= link_to @thought.person.email, @thought.person %>
</p>

<p>
  <b>Project:</b>
  <% if @thought.project %>
  <%= link_to @thought.project.name, @thought.project  %>
  <% else %>
  <em>none</em>
  <% end %>
</p>


<%= link_to 'Edit', edit_person_thought_path(current_person, @thought) %> |
<% if @thought.archived? %>
  <%= link_to 'Activate', activate_person_thought_path(current_person, @thought), :method => :put %> |
  <% else %>
  <%= link_to 'Archive', archive_person_thought_path(current_person, @thought), :method => :put %> |
  <% end %>
  <%= link_to 'Back', person_thoughts_path(current_person) %> |
  <% if @thought.project %>
  <%= link_to 'New thought about ' + @thought.project.name, new_project_thought_path(@thought.project) %>
  <% else %>
  <%= link_to 'New thought', new_person_thought_path(current_person) %>
  <% end %>