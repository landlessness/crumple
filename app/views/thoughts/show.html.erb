<p id="notice"><%= notice %></p>

<% if @thought.archived? %>
<h3><%= 'Archived' %> <%= link_to 'activate', activate_thought_path(@thought), :method => :put %></h3>
<% elsif @thought.in_drop_box? %>
<h3><%= 'In Drop Box' %> <%= link_to 'accept', accept_thought_path(@thought), :method => :put %></h3>
<% end %>

<p>
  <b>Thought:</b>
  <div class="thought_body">
    <%= display_text @thought.body %>    
  </div>
</p>

<p>
  <b>Tags:</b>
  <%= links_to_tags @thought.tags, @thought.project %>
</p>

<p>
  <%= form_for [@thought, @comment] do |f| %>
  <div class="field">
    <%= f.label :body, 'Add a comment:' %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
  <% end %>
  <b>Comments:</b>
  <ul>
    <%= render @thought.comments %>
  </ul>  
</p>
<p>
  <b>Creator:</b>
  <%= link_to @thought.person.email, @thought.person %>
</p>

<p>
  <b>Project:</b>
  <% if @thought.project %>
  <%= link_to @thought.project.name, @thought.project  %>
  <% else %>
  <em>none</em>
  <% end %>
</p>


<%= link_to 'Edit', edit_thought_path(@thought) %> |
<% if @thought.archived? %>
<%= link_to 'Activate', activate_thought_path(@thought), :method => :put %> |
<% elsif @thought.in_drop_box? %>
<%= link_to 'Accept', accept_thought_path(@thought), :method => :put %> |
<% elsif @thought.active? %>
<%= link_to 'Archive', archive_thought_path(@thought), :method => :put %> |
<% end %>
<%= link_to 'Destroy', [@thought], :confirm => 'Are you sure?', :method => :delete %> |
<% if @thought.project %>
<%= link_to 'New thought about ' + @thought.project.name, new_project_thought_path(@thought.project) %>
<% else %>
<%= link_to 'New thought', new_thought_path %>
<% end %>