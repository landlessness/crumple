= javascript ['jquery.resize-font','jquery.autogrow-textarea','jquery.focus-textarea']
%script{:type => "text/javascript"} $(function() {$('.resize-textarea').autogrow();});
- form_for @thought do |f|
  = f.text_area :body, :class => 'resize-font resize-textarea thought-body'
  .lil-space-top
    .align-left
      .align-left
        %div
          = f.label :tags_list, t(:tag).pluralize.capitalize, :class => 'prompt'
          %span.lil-space-left= f.text_field :tags_list
        .optional.align-left.subtle-prompt= t(:optional).capitalize
      - if person_signed_in?
        .align-left.big-space-left
          %div
            %span.prompt= t(:project).capitalize
            %span.lil-space-left= collection_select :thought, :project_id, current_person.projects.order('upper(name)').all, :id, :name, :prompt => true
          .optional.align-left.subtle-prompt= t(:optional).capitalize
      .clear
    .align-right.actions
      = f.hidden_field :state_event
      = f.hidden_field :origin
      = f.submit t(:save).capitalize, :class => 'lil-space-right'
      = link_to t(:cancel), :back, :class => 'subtle-action' if person_signed_in?
    .clear