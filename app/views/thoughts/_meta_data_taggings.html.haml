.subtle-prompt= t(:tag).pluralize
.tags
  %div{:id => ['thought', thought.id, 'tag', 'links']}
    .body.resize-font
      = render thought.taggings.order('created_at')
  %span.loading
    = image_tag 'ajax-loader-indicator.gif', :class => 'on-top'
  .add-tags.display-none.sub-lil-space-top
    = form_for thought, :url => thought_taggings_path(thought), :html => {:class => "add_thought_tags", :method => :post}, :remote => true do |f|
      = f.text_field :tags_list_concat
      %div
        = f.submit t(:add)
        = link_to t(:cancel), '', :class => 'subtle-action cancel-add-tags-link'
  .subtle-action.add-tags-link-container= link_to t(:add), '', :class => 'add-tags-link'
