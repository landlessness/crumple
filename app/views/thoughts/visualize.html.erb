<h2>Thoughts visualization</h2>

<script type="text/javascript+protovis">

var thoughts = <%= viz_data(current_person, @thoughts) %>

// var w = document.body.clientWidth, h = document.body.clientHeight, colors = pv.Colors.category19();
var w = 900, h = 500, colors = pv.Colors.category19();

var vis = new pv.Panel()

.width(w)
.height(h)
.fillStyle("white")
.event("mousedown", pv.Behavior.pan())
.event("mousewheel", pv.Behavior.zoom());

var network = vis.add(pv.Layout.Force)
.nodes(thoughts.nodes)
.links(thoughts.links);

network.link.add(pv.Line);

network.node.add(pv.Dot)
.cursor("pointer")
.size(function(d) (d.linkDegree + 4) * Math.pow(this.scale, -1.5))
.shape(function(d) d.group == 0 ? "diamond" : "circle")
.fillStyle(function(d) d.fix ? "brown" : colors(d.group))
.strokeStyle(function() this.fillStyle().darker())
.lineWidth(1)
.text(function(d) d.nodeName)
.event("mouseover", pv.Behavior.tipsy({gravity: $.fn.tipsy.autoNS, fade: false, html: true}))
.event("mousedown", pv.Behavior.drag())
.event("click", function(d) {
  var base_url = "http://<%= Rails.application.config.top_level_domain %>/thoughts"
  var model_id = d.nodeValue.split("_");
  if (model_id[0] == '<%= Thought.name %>') {self.location = base_url + "/" + model_id[1]}
  else if (model_id[0] == '<%= ActsAsTaggableOn::Tag.name %>') {self.location = base_url + "?tags=" + model_id[1]}
})
.event("drag", network);

vis.render();

</script>

