<% if cloud %>
<p>
  <b>Tag cloud:</b><br/><br/>
  <%= crumple_tag_cloud cloud, project %>
</p>
<% end %>
<p>
  <b>Thoughts:</b><br/>
  <% unless @drop_box %>
    <% if @showing_archived_thoughts %>
      <% if project %>
      <%= link_to 'Active project thoughts', project_path(project) %>
      <% else %>
      <%= link_to 'Active thoughts', person_thoughts_path(current_person) %>
      <% end %>
    <% else %>
      <% if project %>
        <%= link_to 'Archived project thoughts', archived_project_thoughts_path(project) %>
      <% else %>
        <%= link_to 'Archived thoughts', archived_person_thoughts_path(current_person) %>
      <% end %>
    <% end %>
  <% end %>

  <%= will_paginate thoughts %>
  <table>
    <tr>
      <th>Thought</th>
      <th>Tags</th>
      <th>Creator</th>
      <th>Project</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <%= render thoughts %>    
  </table>
  <%= will_paginate thoughts %>
</p>
