- if !thought.active?
  .subtle-prompt= t(:state)
  .lil-space-bottom
    - if thought.state
      .system-content-alert= t(thought.state.to_sym) 
= render 'thoughts/meta_data_project', :thought => thought
.subtle-prompt.lil-space-top= t(:tag).pluralize
- if thought.tags.empty?
  .lil-size
    %em= t(:none)
- else
  .body.resize-font
    - thought.tags.each do |t|
      %span.no-wrap
        %span.people-content= link_to t.name, tag_thoughts_path(t), :class=>'clickable-object'
        %span.super-subtle-delete-action.sub-lil-space-left= link_to 'x', t, :confirm => t(:r_u_sure).capitalize, :method => :delete
      %span.sub-lil-space-right &nbsp;
.subtle-action.space-bottom= link_to t(:add), '#'
- if defined?(include_comments_count) && include_comments_count
  .lil-space-top.subtle-prompt= t(:comment).pluralize
  - if thought.comments.count > 0
    .three-px-top.norm-size= link_to pluralize(thought.comments.count,t(:comment)), thought_path(thought, :anchor => 'comments'), :class=>'link gray'
  - else
    .lil-size
      %em= t(:none)
.lil-space-top
  .subtle-prompt last updated
  .lil-size
    = l(thought.updated_at, :format => :short)
    %div
      = time_ago_in_words thought.updated_at
      ago
.lil-space-top
  .subtle-prompt created
  .lil-size
    = l(thought.created_at, :format => :short)
    %div
      = time_ago_in_words thought.created_at
      ago
