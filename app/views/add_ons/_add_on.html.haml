.subtle-border-bottom.lil-padding-bottom
  %span.align-left.border.lil-space-right
    = link_to(image_tag(add_on.icon_57_url, :width => 57, :height => 57), add_on_path(add_on))
  %span.align-left
    = link_to add_on.name, add_on_path(add_on), :class => 'link'
    .lil-size.sub-lil-space-top= add_on.tag_line
    .subtle-action= link_to t(:learn_more), add_on_path(add_on)
  %span.align-left.space-left.subtle-gray
    .prompt= t(:developer)
    .system-content= add_on.developer.email
  - if current_person.subscribes_to?(add_on)
    %span.align-left.space-left.subtle-gray
      .center-text.subscribed.lil-space-bottom
        = t(:subscribed)    
  .clear